{
  "name": "node-ts-template",
  "version": "0.0.5",
  "description": "Template for Node Typescript",
  "main": "dist/index.js",
  "repository": "https://github.com/HamzaKV/node-ts-template.git",
  "author": "HamzaKV <hamzakv333@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/",
    "build": "tsc",
    "copy-files": "copyfiles -e **/*.ts -u 1 src/**/* dist/src",
    "prestart": "yarn clean && yarn build && yarn copy-files",
    "start": "node dist/index.js",
    "dev": "nodemon index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix --ext .ts .",
    "patch": "git checkout \"main\" && yarn version --patch && git push -u origin \"main\"",
    "minor": "git checkout \"main\" && yarn version --minor && git push -u origin \"main\"",
    "major": "git checkout \"main\" && yarn version --major && git push -u origin \"main\""
  },
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.2",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.12",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.7.1",
    "@types/shelljs": "^0.8.9",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "fs-extra": "^10.0.0",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5"
  }
}
